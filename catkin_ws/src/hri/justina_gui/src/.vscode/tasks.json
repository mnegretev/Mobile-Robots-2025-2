{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc compilar archivo activo",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
