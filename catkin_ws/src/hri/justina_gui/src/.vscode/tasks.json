            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tarea generada por el depurador."
        },
        {
            "type": "catkin_make_isolated",
            "args": [
                "--directory",
                "/home/jspriz/Mobile-Robots-2025-2/catkin_ws",
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
            ],
            "problemMatcher": [
                "$catkin-gcc"
            ],
            "group": "build",
            "label": "catkin_make_isolated: build"
        }
    ],
    "version": "2.0.0"
